
<%= simple_form_for(@presence) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :date, :as => :string, :input_html => {:value => Time.now.strftime( "%d %b %Y" ) } %>
    <%= f.input :hour, as: :float %>
    
    <% if params[:action] == "new" %>
    <%= f.input :employee_id, :as => :hidden, :input_html => {:value => params[:employee_id]} %>
    <% else %>
    <%= f.input :employee_id %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-outline-dark btn-sm" %>
  </div>
<% end %>

<p id="notice"><%= notice %></p>

<h1 align="center">Presences of <%= @employee.first_name %> <%= @employee.last_name %></h1>
<h5 align="center"><span class="badge badge-dark"><%= pluralize(@employee.presence.count, "presence")  %></span><h5>
      <br>
<div class="row">

  
</div>
      <br>
<div class="row">


  <% @employee.presence.each_slice(5)  do |list| %> 
    <div class="col-md-3">  
      <table class="table table-bordered" align="center" >        
        <% list.each do |presence| %>          
          <tr align="center">
            <th colspan="3" ><%= presence.date %></th>
          </tr>  
            <td align="center"><%= presence.hour %></td>
            
            <td align="center"><%= link_to 'Edit', edit_presence_path(presence), class: "btn btn-outline-info btn-sm" %> | 
            <%= link_to 'Destroy', presence, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td> 
        <% end %>      
      </table>
    </div>
  <% end %>
</div> 
<br>

<%= link_to 'Back', employee_path(@employee), class: "btn btn-outline-dark btn-sm" %>

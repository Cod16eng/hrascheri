


  
  <h1 align="center"><%= @company.name %></h1>
  <br>
<h3>Departments<%= link_to 'New Department', new_department_path, class: "btn btn-outline-dark btn-sm float-right" %></h3>
<br>

<table class="table table-striped">
  <thead class="thead-dark" align="center">
    <tr>
      <th>Name</th>      
      <th >Created At</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody align="center">

<% @company.department.each do |department| %>
<tr>
	<td><%= department.name %></td>
	<td><%= department.created_at.strftime("%a-%d-%B-%Y") %></td>
	<td><%= link_to 'Show', department, class:"btn btn-outline-info btn-sm" %></td>
    <td><%= link_to 'Edit', edit_department_path(department), class:"btn btn-outline-success btn-sm" %></td>
    <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm" %></td>
</tr>
<% end %>
</tbody>
</table>

<br>

  

<% if current_user.admin%>
<%= link_to 'Edit', edit_company_path(@company), class: "btn btn-outline-dark btn-sm" %> |
<%= link_to 'Back', companies_path, class: "btn btn-outline-dark btn-sm" %>
<% end %>